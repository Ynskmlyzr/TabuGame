<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplansari"
    tools:context=".GameActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pas"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/btnshow"
        android:fontFamily="@font/finger_paint"
        android:text="PAS"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tabu"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/btnshow2"
        android:fontFamily="@font/finger_paint"
        android:textColor="@color/white"
        android:text="Tabu"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_true"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/btnshow1"
        android:fontFamily="@font/finger_paint"
        android:text="Doğru"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="60"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_bos"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_margin="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_bos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puan = 0"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_isim"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:background="@drawable/btnnn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:text="TABU"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/isim1"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/btn_isim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnnn1"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="EĞLENCE"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/isim2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/isim1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnnn1"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="YARIŞMA"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/isim3"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/isim2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnnn1"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="BULMACA"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/isim4"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/isim3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnnn1"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="kahkaha"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/isim5"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/isim4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnnn3"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="bilgi"
        />
    <TextView
        android:id="@+id/pashak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@id/pas"
        app:layout_constraintEnd_toEndOf="@id/pas"
        android:textColor="@color/black"
        android:textSize="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>