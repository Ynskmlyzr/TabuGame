<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplanmavi"
    tools:context=".ConclusionActivity">

    <TextView
        android:id="@+id/appname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btnnn5"
        android:fontFamily="@font/jockey_one"
        android:gravity="center"
        android:text="TABU : KELİME YARIŞI"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Doğru = 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appname"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/finger_paint"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_tabu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tabu = 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/finger_paint"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/puan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Puan = 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tabu"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/finger_paint"
        android:textColor="@color/black"
        android:gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_devam"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/yellow"
        android:fontFamily="@font/finger_paint"
        android:text="Devam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan"
        android:textSize="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_anamenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/yellow"
        android:fontFamily="@font/finger_paint"
        android:text="Ana Menü"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_devam"
        android:textSize="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cikis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/yellow"
        android:fontFamily="@font/finger_paint"
        android:text="Çıkış"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_anamenu"
        android:textSize="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />
</androidx.constraintlayout.widget.ConstraintLayout>